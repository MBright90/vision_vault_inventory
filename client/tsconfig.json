{
    "compilerOptions": {
      "target": "ES2020",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "plugins": [{ "name": "typescript-plugin-css-modules" }],
      "baseUrl": ".",
      "paths": {
        "@assets/*": [
          "./src/assets/*"
        ],
        "@components/*": [
          "./src/components/*"
        ],
        "@custom_types/*": [
          "./src/custom_types/*"
        ],
        "@routes/*": [
          "./src/routes/*"
        ],
        "@style/*": [
          "./src/style/*"
        ],
        "@utilities/*": [
          "./src/utilities"
        ],
      },
      "outDir": "build",
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/*.d.ts",
    //   "cypress/**/*.ts",
    //   "cypress.config.ts",
    //   "jest.config.ts"
    ],
    "exclude": [
      "node_modules",
      "dist/**/*"
    ],
}